<?xml version="1.0" encoding="utf-8"?>



<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo11"
    tools:context="com.techobbyist.signuplogin.RegisterActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:id="@+id/etEmail"
        android:hint="Email"
        android:textColorHint="@color/BLANCO"
        android:textColor="@color/BLANCO"
        android:layout_marginTop="295dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/ic_e"
        android:layout_marginLeft="10dp"/>


    <EditText
        android:id="@+id/etPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="ContraseÃ±a"
        android:textColorHint="@color/BLANCO"
        android:textColor="@color/BLANCO"
        android:singleLine="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/ic_f"
        />

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Nombre"
        android:textColorHint="@color/BLANCO"
        android:textColor="@color/BLANCO"
        android:singleLine="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/ic_g"/>

    <EditText
        android:id="@+id/etApellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Apellido"
        android:textColorHint="@color/BLANCO"
        android:textColor="@color/BLANCO"
        android:singleLine="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/ic_g"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ocupacion"
        android:padding="15dp"
        android:id="@+id/etOcup"
        android:layout_weight="0.10" />

    <Button
        android:id="@+id/btnReg"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="0dp"
        android:onClick="register"
        android:drawableLeft="@drawable/ic_c"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Volver al Inicio"
        android:id="@+id/tvLogin"
        android:textColor="@color/BLANCO"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="4dp"
        android:layout_gravity="center_horizontal" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" />


</LinearLayout>
    </ScrollView>