<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.techobbyist.signuplogin.Admin_us">




    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        >


        <RelativeLayout
        
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
            android:id="@+id/ejemplo2"
            >

        <ListView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:id="@+id/lvitems"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="36dp"
            >

        </ListView>

        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/id_txt"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="10dp"
            android:text="Id"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Email"
            android:id="@+id/email_txt"
            android:layout_alignBottom="@+id/id_txt"
            android:layout_toRightOf="@+id/id_txt"
            android:layout_toEndOf="@+id/id_txt"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Password"
            android:id="@+id/password_txt"
            android:layout_alignTop="@+id/email_txt"
            android:layout_toRightOf="@+id/email_txt"
            android:layout_toEndOf="@+id/email_txt"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"  />
        
        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Nombre"
            android:id="@+id/nombre_txt"
            android:layout_alignTop="@+id/password_txt"
            android:layout_toRightOf="@+id/password_txt"
            android:layout_toEndOf="@+id/password_txt"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />

         <TextView
             android:layout_width="100dp"
             android:layout_height="20dp"
             android:textAppearance="?android:attr/textAppearanceSmall"
             android:text="Apellido"
             android:id="@+id/apellido_txt"
             android:layout_alignTop="@+id/nombre_txt"
             android:layout_toRightOf="@+id/nombre_txt"
             android:layout_toEndOf="@+id/nombre_txt"
             android:layout_marginLeft="20dp"
             android:layout_marginStart="20dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Ocupacion"
                android:id="@+id/ocupacion_txt"
                android:layout_alignTop="@+id/apellido_txt"
                android:layout_toRightOf="@+id/apellido_txt"
                android:layout_toEndOf="@+id/apellido_txt"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp" />


    </RelativeLayout>

</HorizontalScrollView>

        </LinearLayout>
