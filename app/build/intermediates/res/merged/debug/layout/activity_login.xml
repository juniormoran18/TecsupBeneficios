<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo11"
    tools:context="com.techobbyist.signuplogin.LoginActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:id="@+id/etEmail"
        android:hint="Email"
        android:textColorHint="@color/BLANCO"
        android:textColor="@color/BLANCO"
        android:layout_marginTop="230dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/ic_e"
        android:layout_marginLeft="10dp"/>


    <EditText
        android:id="@+id/etPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="ContraseÃ±a"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/BLANCO"
        android:textColor="@color/BLANCO"
        android:singleLine="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/ic_f"
        />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="60dp"
        android:drawableLeft="@drawable/ic_a"
        android:onClick="login"/>

    <Button
        android:id="@+id/btnReg"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="60dp"
        android:drawableLeft="@drawable/ic_b"
        android:onClick="register"/>

    <Button
        android:id="@+id/btnSalir3"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="60dp"
        android:onClick="register"/>


</LinearLayout>
